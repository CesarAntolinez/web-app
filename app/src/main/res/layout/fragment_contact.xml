<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact.ContactFragment">

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="726dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="701dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="Contactenos"
                android:textColor="@color/black"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="392dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="15dip"
                android:gravity="center"
                android:text="reciclajesavilla@hotmail.com"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="392dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="15dip"
                android:gravity="center"
                android:text="savilla.ambiental@gmail.com"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="392dp"
                android:layout_height="87dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:gravity="center"
                android:text="(1) 4815874                                  3508382043"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="392dp"
                android:layout_height="73dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:gravity="left"
                android:text="Redes Sociales"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="258dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="223dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:src="@drawable/instagram" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"

                android:src="@drawable/whatsaap" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

